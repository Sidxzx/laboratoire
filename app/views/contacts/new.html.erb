<div class="container"> 
    <h3 class="text-center">Contactez-Nous</h3>
    <%= form_for "/contacts" do |f| %>
    
    <%= f.label :nom %>
    <%= f.text_field :nom %>
    
    <%= f.label :email %>
    <%= f.text_field :email %>
    
    <%= f.label :commentaires %>
    <%= f.text_area :commentaires %>
    
    <%= f.submit 'Soumettre' %>
    
    <% end %>
</div>