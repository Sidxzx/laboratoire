<div class="contact-callout container">
    <div class="row"> 
        <h3 class="text-center">Contactez-Nous</h3>
        
        <div class="col-md-4 col-md-offset-4">
            <%= flash[:notice] %>
            <div class="well">
                <%= form_for @contact do |f| %>
                    <div class="form-group">
                        <%= f.label :nom %>
                        <%= f.text_field :nom, class: 'form-control' %>
                    </div>
                    <div class="form-group">    
                        <%= f.label :email %>
                        <%= f.text_field :email, class: 'form-control' %>
                    </div>  
                    <div class="form-group">
                        <%= f.label :commentaires %>
                        <%= f.text_area :commentaires, class: 'form-control' %>
                    </div>  
                <%= f.submit 'Soumettre', class: 'btn btn-default' %>
                <% end %>
            </div>
        </div>
    </div>
</div>